{
  "name": "terraxoffroad",
  "version": "1.0.0",
  "main": "index.ts",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "test:e2e:build:android": "detox build --configuration android",
    "test:e2e:test:android": "detox test --configuration android",
    "test:e2e:build:ios": "detox build --configuration ios",
    "clean-start": "expo start --clear --reset-cache --no-dev --minify"
  },
  "dependencies": {
    "@expo/metro-runtime": "~5.0.4",
    "@react-native-async-storage/async-storage": "2.1.2",
    "@react-navigation/bottom-tabs": "^7.4.5",
    "@react-navigation/drawer": "^7.5.8",
    "@react-navigation/native": "^7.1.17",
    "@react-navigation/native-stack": "^7.3.24",
    "expo": "~53.0.0",
    "expo-auth-session": "~6.2.1",
    "expo-build-properties": "~0.14.8",
    "expo-crypto": "~14.1.5",
    "expo-dev-client": "~5.2.4",
    "expo-location": "~18.1.6",
    "expo-status-bar": "~2.2.3",
    "lucide-react-native": "^0.537.0",
    "openmeteo": "^1.2.0",
    "react": "19.0.0",
    "react-devtools": "^1.0.5",
    "react-dom": "19.0.0",
    "react-native": "0.79.5",
    "react-native-dotenv": "^3.4.11",
    "react-native-gesture-handler": "~2.24.0",
    "react-native-maps": "1.20.1",
    "react-native-reanimated": "~3.17.4",
    "react-native-safe-area-context": "5.4.0",
    "react-native-screens": "~4.11.1",
    "react-native-web": "^0.20.0"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@expo/cli": "^0.24.20",
    "@types/react": "~19.0.10",
    "@types/react-native-dotenv": "^0.2.2",
    "detox": "^20.28.0",
    "jest": "^29.7.0",
    "typescript": "~5.8.3"
  },
  "detox": {
    "testRunner": {
      "name": "jest",
      "args": {
        "config": "e2e/jest.config.js"
      },
      "jest": {
        "setupFilesAfterEnv": [
          "<rootDir>/e2e/init.js"
        ]
      }
    },
    "apps": {
      "android": {
        "type": "android.apk",
        "build": "npx expo run:android --variant debug --no-build-cache && cd android && ./gradlew assembleDebugAndroidTest",
        "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
        "testBinaryPath": "android/app/build/outputs/apk/androidTest/debug/app-debug-androidTest.apk"
      },
      "ios": {
        "type": "ios.app",
        "build": "npx expo run:ios --configuration Release --device-family=simulator",
        "binaryPath": "ios/build/Build/Products/Release-iphonesimulator/TerraOffRoad.app",
        "testBinaryPath": "ios/build/Build/Products/Release-iphonesimulator/TerraOffRoad.app"
      }
    },
    "devices": {
      "emulator": {
        "type": "android.emulator",
        "device": {
          "avdName": "Medium_Phone_API_36.0"
        }
      },
      "physical": {
        "type": "android.attached",
        "device": {
          "adbName": "R5CY10WG6VM"
        }
      },
      "simulator": {
        "type": "ios.simulator",
        "device": {
          "type": "iPhone 15"
        }
      }
    },
    "configurations": {
      "android": {
        "device": "physical",
        "app": "android"
      },
      "ios": {
        "device": "simulator",
        "app": "ios"
      }
    }
  },
  "private": true
}
